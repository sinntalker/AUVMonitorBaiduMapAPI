/* pages/device/deviceInfo/deviceInfo.wxss */
.deviceInfo {
  min-width: 90%;
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  padding-top: 10px;
  border: 1px solid #118fff;
  border-radius: 10px;
  font-size: 11pt;
  /* position: fixed;
  bottom: 0; */
  background: #fff;
}

.deviceName {
  display: flex;
  flex-direction: row;
  padding: 5px;
  font-size: 14pt;
  font: bold;
}

.deviceData {
  padding-top: 3px;
  padding-bottom: 2px;
}

.deviceSet {
  flex-direction: row;
  display: flex;
  flex: 1;
  font-size: 12pt;
}

.deviceShowMore{
  display: flex;
  position: relative;
  flex-direction: row;
  margin-top: 10px;
  padding-right: 20px;
  padding-top: 8px;
  padding-bottom: 8px;
}

.deviceShowMoreImage {
  width: 20px;
  height: 20px;
}

.deviceSetButton {
  margin-top: 10px;
  text-align: center;
  margin-left: auto;
  border-radius: 40px;
  background: #118fff;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 8px;
  padding-bottom: 8px;
}

/* 展示更多信息 - 包含图表 部分 */

.deviceInfoMore {
  flex: none;
  flex-direction: column;
  padding: 10px;
}

.deviceInfoExport {
  flex-direction: row;
  display: flex;
}

.deviceInfoExportView {
  flex-direction: row;
  display: flex;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  background: #118fff;
  color: white;
  border-radius: 10px;
  text-align: center;
}

.deviceInfoHistoryList {
  display: flex;
  flex-direction: column;
  padding: 5px;

}

.deviceInfoHistoryListData {
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 5px;
  padding-right: 5px;
  height: 100px;
}

.canvas {
  width: 100%;
  height: 100px;
}