/* 顶部导航栏式样 */
.navbar{
  flex: none;
  display: flex;
  background: #FFF;
  align-items: center;
  padding-bottom: 2px;
  border-bottom: 1px solid #dbdbdb;
}
.navitop-item{
  text-align: center;
  padding:10px;
  flex: auto;
}
.navitop-item.active{
  color: #1296db;
  border-bottom: solid #1296db 1px;
}
.navitop-itemControl{
  text-align: center;
  padding:3px;
  flex: auto;
  text-size-adjust: 10px;
}
.navitop-itemControl.active{
  color: #1296db;
  text-size-adjust: 10px;
  border-bottom: solid #1296db 1px;
}
.navbarpage {
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  background: #fff;
}
.user-row-image {
  width: 35px;
  height: 35px;
  margin: 5px;
  border: 1px #dbdbdb solid;
  border-radius: 50%;
}
/* 侧边栏 */
/* 主页显示 */
.mpage {
  z-index: 0;
  position: fixed;
  bottom: 0;
  top: 0;
  background-color: #fff;
}

/* 头像背景图 */
.loginbg {
  width: 100%;
  /* height: 416rpx; */
  -webkit-filter: blur(2px);
  filter: blur(2px);
  position: relative;
}

/* 头像所在布局框架 */
.user-face-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 0 20rpx 0;
}

/* 设置侧边栏头像 */
.user-face {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  border-radius: 50%;
  -moz-box-shadow: 0px 3px 20px #333;
  -webkit-box-shadow: 0px 3px 20px #333;
  box-shadow: 0px 3px 20px #333;
}

/* 设置侧边栏条目格式 */
.itemself {
  padding-bottom: 7.5px;
  padding-top: 7.5px;
  background-color: #fff;
  border-bottom: 1rpx solid rgb(230, 230, 230);
  margin-left: 5%;
  margin-right: 5%;
  text-align: center;
}

/* 侧边栏 */
.slide {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  border-right: 1px solid #dbdbdb;
  box-sizing: border-box;
}

.slide .slide-box {
  position: absolute;
  top: 0;
  bottom: 0;
}

/* 滑动动画 */
.withAnimate {
  transition: all 300ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}